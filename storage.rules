rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra padrão: Exige que o usuário esteja autenticado para qualquer leitura ou escrita.
    // Isso protege seus arquivos de acesso público não autorizado.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
