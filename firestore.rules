rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Permite que qualquer pessoa leia as configurações do sistema.
    // Isso é necessário para que a tela de login possa verificar o modo de manutenção.
    // A escrita continua protegida.
    match /systemSettings/config {
      allow read: if true;
      allow write: if request.auth != null; // A lógica de Super Admin é verificada no backend/regras de UI.
    }

    // REGRA GERAL para todas as outras coleções:
    // Exige que o usuário esteja autenticado para qualquer leitura ou escrita.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
