
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all
    match /{document=**} {
      allow read, write: if false;
    }
    
    // Auth-related collections
    match /collaborators/{userId} {
      allow read: if request.auth != null; // Allow any authenticated user to read collaborator profiles
      allow write: if request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails; // Only super admins can write
    }

    match /collaborator_logs/{logId} {
      allow read: if request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
      allow write: if request.auth != null; // Log entries are created by server-side logic or trusted clients
    }
    
    // System-wide settings and counters
    match /systemSettings/config {
        allow read: if request.auth != null; // All authenticated users can read settings
        allow write: if request.auth.token.email in resource.data.superAdminEmails; // Only super admins can change settings
    }
     match /counters/{counterId} {
        allow read, write: if request.auth != null; // Allow any authenticated user to interact with counters (for transactions)
    }

    // Content collections (generally public read for authenticated users)
    match /newsItems/{newsId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
    match /documents/{docId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
     match /labs/{labId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
    match /messages/{messageId} {
        allow read: if request.auth != null; // Further checks can be done client-side or with more complex rules
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
    match /quickLinks/{linkId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
     match /rankings/{rankingId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
    match /contacts/{contactId} {
      allow read: if request.auth != null;
      allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
    
    // Polls and responses
    match /polls/{pollId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
    match /polls/{pollId}/responses/{responseId} {
        allow read: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageContent == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
        allow create: if request.auth != null && request.resource.data.userId == get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.id3a;
    }
    
    // Workflow related collections
    match /workflowDefinitions/{defId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageWorkflows == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
     match /workflowAreas/{areaId} {
        allow read: if request.auth != null;
        allow write: if get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageWorkflows == true || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
     match /workflows/{workflowId} {
        // Read: If user submitted it OR is the assignee OR is the owner OR has management permission
        allow read: if request.auth != null && 
                    (resource.data.submittedBy.userId == get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.id3a || 
                     resource.data.assignee.id == get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.id3a ||
                     resource.data.ownerEmail == request.auth.token.email ||
                     get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageRequests == true ||
                     request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails);

        // Create: Any authenticated user can create a request.
        allow create: if request.auth != null;

        // Update: More complex logic, often handled by who can read + specific field validation
        allow update: if request.auth != null &&
                      (get(/databases/$(database)/documents/collaborators/$(request.auth.uid)).data.permissions.canManageRequests == true ||
                       request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails);
    }

    // Floating Action Button messages
    match /fabMessages/{userId} {
        // Only the user themselves or a super admin can read/write their messages
        allow read, write: if request.auth != null && (request.auth.uid == resource.data.userId || request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails);
    }
     match /idleFabMessages/{messageId} {
      allow read: if request.auth != null;
      allow write: if request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }

    // Audit logs are write-only for authenticated users
    match /audit_logs/{logId} {
        allow create: if request.auth != null;
        allow read, update, delete: if request.auth.token.email in get(/databases/$(database)/documents/systemSettings/config).data.superAdminEmails;
    }
  }
}
